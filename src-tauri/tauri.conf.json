{
  "productName": "Synergy.OS",
  "version": "0.1.0",
  "identifier": "com.dota2draft.dev",
  "build": {
    "beforeDevCommand": "node ../scripts/dev-server.js",
    "beforeBuildCommand": "",
    "frontendDist": "../ui",
    "devUrl": "http://127.0.0.1:1430"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self' https://cdn.steamstatic.com https://cdn.tailwindcss.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' * data:;"
    },
    "windows": [
      {
        "title": "Synergy.OS",
        "width": 1620,
        "height": 860,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "http://127.0.0.1:1430"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../data/**/*"
    ]
  }
}
